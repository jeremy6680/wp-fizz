{% extends "base.twig" %}

{% block content %}
<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
  <section class="section pb-4">
      <div class="container py-4">
        <div class="columns">
          <div class="column">
            <h1 class="title is-2 is-spaced {% if post.subtitle %}{% else %}has-text-centered{% endif %}">{{post.title}}</h1>
          </div>
		  {% if post.subtitle %}
          <div class="column">
            <p class="subtitle">{{post.subtitle}}</p>
          </div>
		  {% endif %}
        </div>
        <div class="columns is-centered has-text-left">
          <div class="column is-8">
            <div class="content">
              {{post.content}}
            </div>
          </div>
        </div>
      </div>
  </section>
</article>
{% endblock %}