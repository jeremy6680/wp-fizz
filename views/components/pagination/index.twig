{% if posts.pagination.pages is not empty %}
      <nav class="pagination-block" is="wpf-block-pagination" data-{{ block.id }}>
        <div class="container">
          <div class="pagination is-centered" role="navigation" aria-label="pagination">
            <a class="pagination-previous" href="{{ posts.pagination.prev.link }}">{{ __(' Previous', 'wpf-theme') }}</a>
            <a class="pagination-next" href="{{ posts.pagination.next.link }}">{{ __(' Next', 'wpf-theme') }}</a>
            <ul class="pagination-list">
            {% for page in posts.pagination.pages %}
                {% if page.link %}
                    <li>
                        <a class="pagination-link" aria-label="Goto page {{ page.title }}" href="{{ page.link }}">{{ page.title }}</a>
                    </li>
                {% else %}
                    <li class="current">
                        <a href="#" class="pagination-link is-current" aria-label="Page {{ page.title }}" aria-current="page">{{ page.title }}</a>
                    </li>
                {% endif %}
            {% endfor %}
            </ul>
          </div>
        </div>
      </nav>
{% endif %}
