<div class="comment-form" is="wpf-block-comment-form" data-{{ block.id }}>
    <h3>{{ __('Add comment', 'wpf-theme') }}</h3>
    <form class="comment-form" method="post" action="{{ site.site_url~'/wp-comments-post.php' }}">
        {% if  user %}
            <input type="hidden" name="email" value="{{ user.email }}">
            <input type="hidden" name="author" value="{{ user.name }}">
            <input type="hidden" name="url" value="{{ user.link }}">
        {% else %}
            <label>{{ __(' Email', 'wpf-theme') }}<br>
                <input required name="email" type="email" id="email">
            </label>
            <label>{{ __(' Name', 'wpf-theme') }}<br>
                <input required name="author" type="text">
            </label>
            <label>{{ __(' Website', 'wpf-theme') }}<br>
                <input name="url" type="url">
            </label>
        {% endif %}
        <label>{{ __(' Comment', 'wpf-theme') }}<br>
            <textarea placeholder="Leave a comment..." name="comment" cols="60" rows="3"></textarea>
        </label>
        <input name="comment_post_ID" value="{{ post.id }}" type="hidden">
        <input name="comment_parent"  value="{{ comment.ID|default('0') }}" type="hidden">
        <button type="submit" name="Submit" class="btn">{{ __(' Send', 'wpf-theme') }}</button>
        <button type="reset">{{ __(' Cancel', 'wpf-theme') }}</button>
        <p>{{ __(' Your comment will be revised by the site if needed.', 'wpf-theme') }}</p>
    </form>
</div>
