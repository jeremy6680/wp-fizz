{% block header %}
  <section class="{{ classes }} section" is="wpf-block-cards" data-{{ block.id }}>
    <div class="container py-4">
      <div class="columns is-multiline">
          {% for card in fields.cards %}
          <div class="column is-12 is-4-widescreen">
            <div class="card">
              <div class="card-header">
                <div class="card-header-title">
                  <h5 class="subtitle is-5">{{card.label}}</h5>
                </div>
                <div class="card-header-icon"><a href="#">{{ __('Sell all', 'wpf-theme') }}</a></div>
              </div>
              <div class="card-image">
                <a href="#"><img src="https://shuffle.dev/placeholder/pictures/bg_4-3.svg?primary=00d1b2" alt=""></a>
              </div>
              <div class="card-content">
                <div class="menu">
                  <ul class="menu-list">
                  {% for item in Post(card.posts) %}
                  <li><a href="{{item.link}}"><span>{{item.title}}</span><span class="is-pulled-right">&rsaquo;</span></a></li>
                  {% endfor %}
                  </ul>
                </div>
              </div>
            </div>
          </div>
          {% endfor %}
      </div>
    </div>
  </section>
{% endblock %}