{% extends "base.twig" %}

{% block content %}
<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
	<section class="section">
		<div class="container has-text-centered py-4">
			<h1 class="title is-2 is-spaced">{{post.title}}</h1>
          	<p class="subtitle"><span>{{ __('Posted on', 'wpf-theme') }} {{ post.date|date('F j, Y') }}, {{ __('by', 'wpf-theme') }} </span><a href="{{post.author.path}}">{{ post.author.name }}</a></p>
			{% if post.thumbnail %}
			<div class="my-6"><img src="{{ post.thumbnail.src|resize(1200, 400) }}" alt=""></div>
			{% endif %}
          <div class="columns is-centered has-text-left">
            <div class="column is-8">
              <div class="content">
			  	{{post.content}}
				<div class="tags"><a class="tag is-primary" href="#">Decentralization</a><a class="tag is-primary" href="#">Infrastructureless</a><a class="tag is-primary" href="#">Pied Piper</a><a class="tag is-primary" href="#">Security</a><a class="tag is-primary" href="#">Dinesh</a></div>
			  </div>
			</div>
		  </div>
		  <a href="{{ post.edit_link }}">{{ _e('edit') }}</a>
		</div>
	</section>	
</article>

{% endblock %}